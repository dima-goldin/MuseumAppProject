<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:padding="10dp"
              android:layout_gravity="center"
              android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/entity_id"
        android:id="@+id/textView"
        android:layout_gravity="center_horizontal"
        android:textSize="18sp"
        android:textColor="@color/highlight_rec"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="2dp"/>

    <TextView
        android:id="@+id/EntityIdTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/entity_id"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="1dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="#000000"
        android:gravity="center"
        android:textSize="14sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/entity_name"
        android:id="@+id/textView2"
        android:layout_gravity="center_horizontal"
        android:textSize="18sp"
        android:textColor="@color/highlight_rec"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="2dp"/>

    <TextView
        android:id="@+id/EntityNameTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/entity_name"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="1dp"
        android:textColor="#000000"
        android:gravity="center"
        android:textSize="14sp"/>

    <Button
        android:id="@+id/ShowCreativeBT"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:text="@string/fetch_creative"
        android:background="@color/highlight_rec"
        android:padding="5dp"
        android:textColor="#FFFFFF"
        android:textSize="16sp"/>
</LinearLayout>